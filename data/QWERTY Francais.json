  "standard": ["ISO", "ANSI"],
  "country": "International",
  "description": "QWERTY Français: French keyboard layout for US QWERTY keyboards, enabling proper French typing for expats, travelers, and international users",
  "philosophy": {
      "ambition": "Provide French speakers using US QWERTY keyboards with easy access to French characters (É, È, Ç, À, œ, «»), targeting developers and French expats",
      "target_audience": [
          "French-speaking developers who prefer coding on QWERTY layout",
          "French expatriates and travelers using international QWERTY keyboards",
          "Francophones working in international companies with US keyboard standards",
          "Students and professionals needing both French accents and programming symbols"
      ],
      "design_principles": [
          "Minimal changes from US QWERTY: add French characters while keeping familiar layout",
          "Smart Caps Lock that only affects letters, with easy access to É, È, Ç, À",
          "Programming symbols on AltGr home row ({, }, [, ], |, \\)",
          "Full support for French and European languages",
          "Intuitive placement: no stickers needed, easy to remember",
          "Sparse AltGr layer to avoid Ctrl+Alt conflicts; rare characters via dead keys"
      ],
      "not_goals": [
          "Radical ergonomic optimization (this is not a Bépo or Dvorak)",
          "Replacing AZERTY for users in France (use a standard AZERTY layout instead)"
      ]
  },
  "changes_from_qwerty_us": {
      "é on C10 (semicolon position)": "Direct access to the most common French accented letter",
      "Smart Caps Lock: only affects letters": "Easier access to É, È, Ç, À by combining with Caps Lock",
      "Dead keys for accents on D11-D13": "Grave, acute, circumflex, diaeresis, and tilde accents accessible",
      "ç on AltGr+C": "Direct access to French cedilla",
      "œ and æ on AltGr+O and AltGr+A": "French ligatures easily accessible",
      "French guillemets « » on AltGr+Z/X": "Proper French quotation marks",
      "Programming symbols preserved on AltGr home row": "{, }, [, ], |, \\ remain accessible for developers"
  },
  "conventions": {
      "caps_lock_behavior": "Caps Lock only affects keys that produce letters (accented or not)",
      "caps_alt_gr": "If absent, use the alt_gr value (Caps Lock does not affect symbols)",
      "caps_shift_alt_gr": "If absent, use the shift_alt_gr value (Caps Lock does not affect symbols)",
      "null_meaning": "No output for this key combination"
  },
